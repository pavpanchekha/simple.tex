% Page style issues
\setlength{\parskip}{0pt}%
\setlength{\parindent}{.5in}%
\setcounter{secnumdepth}{-1}%

% Page Layout Stuff
\usepackage[margin=1in]{geometry}
\usepackage{fancyhdr}
\pagestyle{fancy}
\fancyhead{}
\fancyfoot{}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}

% For double-spacing
\usepackage{setspace}

\makeatletter
\renewcommand{\title}[2][\@title]{\def\@title{#2}\def\@stitle{#1}}
\providecommand{\author}[1]{\def\@author{#1}}
\providecommand{\words}[1]{\def\@words{#1}}
\providecommand{\address}[2]{\def\@address{#1\\#2}}
\providecommand{\email}[1]{\def\@email{#1}}

\renewcommand{\@maketitle}{
    \let \footer \thanks
    \newpage
    \null
    {%
      \noindent \@author \hfill \ifx \@words \undefined (TODO: add word count)
                                                  \else (\@words\ words) \fi \\%
      \@address \\%
      \ifx \@email \undefined \relax \else \textt{\@email} \fi%
    }\par%
    \begin{center}%
    {\@title}%
    \end{center}%
    \edef\thefancyheader{\@author\ / \@stitle}% \edef to expand at-commands
    \fancyhead[R]{\thefancyheader\ / \thepage}% Set up header
    \doublespace%
} \makeatother
